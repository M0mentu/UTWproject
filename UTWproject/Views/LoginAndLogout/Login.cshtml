@model  UTWproject.Models.loginModel
@{
    //Layout = "~/Views/Shared/DashboardLayout.cshtml";
    ViewBag.Title = "Login";
}
@section scripts{
   

    <style>

.form-group{
    width:90%;
     padding-left:40%;
     text-align:center;

}
       .form-control {
    border: 0;
    box-shadow:none;
   border-bottom:solid;
   border-bottom-width:1px;
    border-bottom-color:black;
}
    .labels{
    width:90%;
     padding-right:6%;
     text-align:center;
     font-size:small;
     color:dimgrey;
    

}
    

    </style>
    <script type="text/javascript">

        var message = '@ViewBag.message';

   
        if (message != "" ) {

            sweetAlert("Warning", message, "warning");

        }
    </script>
    }


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <label class="labels">User name</label><br />

        <div class="form-group">

            @*@Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-4">
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control ", id = "userid" } })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>
        </div>

        <label class="labels">Password</label><br />
            <div class="form-group">
                @*@Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="col-md-4">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", id = "passid" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            @if (ViewBag.message != null)
            {
                <div class="form-group">
                    <div class="control-label col-md-4" style="color:red;">@ViewBag.message</div>
                </div>
            }
